<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Location_Change_Request"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="3dp"
                android:background="@color/white"
                app:cardPreventCornerOverlap="true"
                android:layout_margin="20dp">
                <LinearLayout
                    android:id="@+id/adapterlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/cus_bgd">

                    <TextView
                        android:id="@+id/con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Location Modification Request"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/TvEmpCod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee Code"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>

                    <EditText
                        android:id="@+id/EmpCode"
                        android:textColor="@color/LightBlue"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="17sp"
                        android:paddingStart="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/stroke_curved_box" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="4dp"/>

                    <TextView
                        android:id="@+id/tvEmpName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee Name"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>

                    <EditText
                        android:id="@+id/EmpName"
                        android:textColor="@color/LightBlue"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="17sp"
                        android:paddingStart="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/stroke_curved_box" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <TextView
                        android:id="@+id/tvBranchName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branch Id"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/BranchId"
                        android:textColor="@color/LightBlue"
                        android:enabled="false"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/stroke_curved_box"
                        android:paddingStart="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="4dp"/>
                    <TextView
                        android:id="@+id/tvCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Center Name"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />
                    <EditText
                        android:id="@+id/CenterName"
                        android:textColor="@color/LightBlue"
                        android:enabled="false"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/stroke_curved_box"
                        android:paddingStart="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="4dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingEnd="10dp">
                            <TextView
                                android:id="@+id/TvCurr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current latitude"
                                android:textColor="@color/black" />
                            <EditText
                                android:id="@+id/CurLat"
                                android:enabled="false"
                                android:textSize="17sp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:textColor="@color/LightBlue"
                                android:background="@drawable/stroke_curved_box"
                                android:paddingStart="10dp"
                                android:gravity="center"


                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Longitude"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/CurLong"
                                android:textColor="@color/LightBlue"
                                android:enabled="false"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:textSize="17sp"
                                android:background="@drawable/stroke_curved_box"
                                android:paddingStart="10dp"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingEnd="10dp">
                            <TextView
                                android:id="@+id/TvOldLat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Old Latitude"
                                android:textColor="@color/black" />
                            <EditText
                                android:id="@+id/OldLat"
                                android:enabled="false"
                                android:textSize="17sp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:textColor="@color/LightBlue"
                                android:background="@drawable/stroke_curved_box"
                                android:paddingStart="10dp"
                                android:gravity="center"


                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/TvOldLong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Old Longitude"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/OldLong"
                                android:textColor="@color/LightBlue"
                                android:enabled="false"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:textSize="17sp"
                                android:background="@drawable/stroke_curved_box"
                                android:paddingStart="10dp"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/CurrPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Place"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />
                    <EditText
                        android:id="@+id/CurPlace"
                        android:textColor="@color/LightBlue"
                        android:enabled="false"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/stroke_curved_box"
                        android:paddingStart="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="8dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingEnd="10dp">

                            <Button
                                android:id="@+id/request"
                                android:layout_width="130dp"
                                android:layout_height="50dp"
                                android:text="REQUEST"
                                android:layout_marginTop="8dp"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                app:backgroundTint="@color/LightBlue"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>

    </LinearLayout>


</LinearLayout>