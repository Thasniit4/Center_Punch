<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ===================== HEADER SECTION ===================== -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@drawable/top_green_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/asirvad" />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Welcome Back"-->
<!--            android:textSize="28sp"-->
<!--            android:textStyle="bold"-->
<!--            android:visibility="visible"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:textColor="@color/black"-->
<!--            android:paddingBottom="20dp" />-->
    </LinearLayout>


    <!-- ===================== OVERLAPPING PROFILE IMAGE ===================== -->
    <TextView
        android:id="@+id/profileImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        android:background="@drawable/circle_bg"
        android:padding="4dp"
        android:text="Geo Punching User Login"
        android:gravity="center"
        android:translationY="-50dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/headerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- ===================== ROUNDED CARD WITH USERNAME / PASSWORD ===================== -->

    <LinearLayout
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_bg"
        android:padding="20dp"
        android:translationY="-40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profileImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="10dp">

        <!-- Username -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cus_edittext"
                android:hint="Username"
                android:singleLine="true"
                android:maxLength="6"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/lite_red"
            app:hintEnabled="false"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/cus_edittext"
                android:hint="Password"
                android:singleLine="true"
                android:maxLength="15"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->
        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Login"
            android:gravity="center"
            android:background="@drawable/cus_btm"
            android:textColor="@color/white"
            android:paddingVertical="12dp"
            android:textSize="16sp" />

    </LinearLayout>


    <!-- ===================== FOOTER TEXT ===================== -->
    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â©2025 Asirvad Internal IT Team. All rights reserved."
        android:textSize="10sp"
        android:textColor="@color/black"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/formCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.8"
        android:textSize="10sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/footer"
        app:layout_constraintStart_toStartOf="@id/footer"
        app:layout_constraintEnd_toEndOf="@id/footer" />

</androidx.constraintlayout.widget.ConstraintLayout>
